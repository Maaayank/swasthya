<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llgoal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dayRecordText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/color3"
                    android:textColor="@color/color1"
                    android:padding="5dp"
                    tools:text="Today's Goal : "
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="2sp"
                    android:autoSizeTextType="uniform"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/setgoal"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/color2"
                    android:text="Set Goal"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/color1" />


            </LinearLayout>


            <TextView
                android:id="@+id/stepLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llgoal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:text="Steps taken"
                android:textStyle="bold"
                android:textColor="@color/color3"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/stepText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stepLabel"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="0"
                android:textColor="@color/color2"
                android:background="@color/color1"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/accuracy_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/stepText"
                android:textColor="@color/color5"
                android:background="@color/color3"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="Alert will be dsplayed here"
                />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/accuracy_alert"
                android:layout_marginTop="70dp"
                tools:text="Time: "
                android:textColor="@color/color2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/distanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/timeText"
                android:layout_marginTop="10dp"
                tools:text="Distance: "
                android:textColor="@color/color2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/orientationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/distanceText"
                android:layout_marginTop="10dp"
                tools:text="Orientation: "
                android:textColor="@color/color2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/speedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/orientationText"
                android:layout_marginTop="10dp"
                tools:text="Average speed: "
                android:textColor="@color/color2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingLeft="10dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/speedText"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:background="@color/color3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Previous session "
                    android:textColor="@color/color2"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/stepText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="Step : "
                    android:textColor="@color/color1"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/timeText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="Time: "
                    android:textColor="@color/color1"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/distanceText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="Distance: "
                    android:textColor="@color/color1"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/speedText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:text="Average speed: "
                    android:textColor="@color/color1"
                    android:textStyle="bold"
                    android:textSize="20sp" />
            </LinearLayout>
            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:background="@color/color2"
                android:textStyle="bold"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="@color/color1" />

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Start"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@color/color2"
                android:textColor="@color/color1"
                android:layout_alignParentEnd="true"/>
            </ScrollView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>